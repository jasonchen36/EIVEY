  %h3.mobile-menu-header
    Clothing
  %ul#mobile-menu-main.standard-menu
  %h3.mobile-menu-header
    Company
  %ul.standard-menu
    %li
      %a{href:"#{prefix}/about"}
        About
    %li
      %a{href:"#{prefix}/contact"}
        Contact
    %li
